//-nabvar se llama con +navbar('a', variable con los datos para este caso pages)
-var pages = [{ name: 'MenÃº principal', archive: 'menu', submenus: ['submenu1', 'submenu2'] }, { name: 'Encuentrame', archive: 'found' }]
mixin navbar(caso, pages)
  .nav.navbar 
    .navbar__logo
    if caso === 'a'
      a(href="./index.html")
        img(src="../../ASSETS/IMG/logo.png", alt="logo empresa")
    else if caso === 'b'
      a(href="../index.html")
        img(src="../../../ASSETS/IMG/logo.png", alt="logo empresa")
    .navbar__start
    if caso === 'a'
      a(href="./index.html") inicio
    else if caso === 'b'
      a(href="../index.html") inicio
    .navbar__pages
      ul.navbar__pages-container
        each page in pages
          -var ruteHtml = () => caso === 'a' ? './PAGES/' + page.archive + '.html' : './' + page.archive + '.html'
          li
            a(href=ruteHtml()) #{page.name}
              ul
                if typeof page.submenus !== 'undefined' && Array.isArray(page.submenus)
                  each submenu in page.submenus
                    li
                      a(href=ruteHtml()) #{submenu}

